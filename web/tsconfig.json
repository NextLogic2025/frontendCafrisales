{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "features/*": [
        "features/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "hooks/*": [
        "hooks/*"
      ],
      "services/*": [
        "services/*"
      ],
      "context/*": [
        "context/*"
      ]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}